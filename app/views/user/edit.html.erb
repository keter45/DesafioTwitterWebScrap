<% @user.errors.full_messages.each do |msg| %>
  <div class="alert alert-danger" role="alert">
    <%=msg%>
  </div>
<%end%>

<div class="create-user-container">
  <h1>Criação de um novo Usuário</h1>
  <%= form_for @user, :url=> user_path do |form| %>
    <div class="form-group">
      <%= form.label :name,"Nome:"%>
      <%= form.text_field :name%>
    </div>
    <div class="form-group">
      <%= form.label :twitterName,"Nome do twitter:"%>
      <%= form.text_field :twitterName%>
    </div>
    <div class="form-group">
      <%= form.label :twitterUrl,"Twitter Url:"%>
      <%= form.text_field :twitterUrl,placeholder:"https://twitter.com/"%>
    </div>
    <div class="form-group">
      <%= form.label :description,"Descrição:"%>
      <%= form.text_field :description%>
    </div>
    <div class="form-group">
      <%=form.submit "Salvar", class:'button'%>
    </div>
  <% end %>
</div>
